<%- include('../partials/header') %>
<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a class="text-decoration-none text-info" href="/">Home</a></li>
      <li class="breadcrumb-item"><a class="text-decoration-none text-info" href="/collections">Collections</a></li>
      <li class="breadcrumb-item text-white active" aria-current="page">New Collection</li>
    </ol>
  </nav>
  <h2 class="text-center">Create New Collection</h2>
  <div class="col-md-6 offset-3">
    <form id="new-collection-form" action="/collections" method="POST">
      <div class="form-row">
        <div class="form-group mb-3">
          <label for="name">Name</label>
          <input class="form-control" type="text" id="collection-name" name="name" required />
        </div>
      </div>
      <div class="form-row">
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea class="form-control" id="collection-description" name="description" rows="3"></textarea>
        </div>
      </div>
      <div class="form-row text-right">
        <button type="submit" class="btn btn-secondary float-end">Create</button>
      </div>
      </div>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>